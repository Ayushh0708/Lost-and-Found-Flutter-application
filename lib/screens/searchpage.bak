  Future getItems() async{
    print("sending");
    isLoadingItems = true;
    http.Response response = await http.post(
      Uri.parse(url+endPoint),
      body:{
        "query":"",
        "category":"",
        "page":page.toString(),
        "count":maxCount.toString()
      } 
    );
